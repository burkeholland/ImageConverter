<ui:FluentWindow x:Class="ImageConverter.Views.QuickConvertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Quick Convert" 
        Height="280" 
        Width="380"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        Icon="pack://application:,,,/Assets/app.ico">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar spacer -->
        <ui:TitleBar Grid.Row="0" Title="Quick Convert" ShowMaximize="False" ShowMinimize="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/app.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="8,48,8,8">
            <TextBlock Text="Select output format:" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,12" />

            <WrapPanel HorizontalAlignment="Center">
                <ui:Button x:Name="BtnJpeg" Content="JPEG" Margin="4" Width="80" Click="OnFormatClick" Tag="Jpeg" />
                <ui:Button x:Name="BtnPng" Content="PNG" Margin="4" Width="80" Click="OnFormatClick" Tag="Png" />
                <ui:Button x:Name="BtnWebp" Content="WebP" Margin="4" Width="80" Click="OnFormatClick" Tag="WebP" />
                <ui:Button x:Name="BtnGif" Content="GIF" Margin="4" Width="80" Click="OnFormatClick" Tag="Gif" />
                <ui:Button x:Name="BtnIco" Content="ICO" Margin="4" Width="80" Click="OnFormatClick" Tag="Ico" />
                <ui:Button x:Name="BtnBmp" Content="BMP" Margin="4" Width="80" Click="OnFormatClick" Tag="Bmp" />
                <ui:Button x:Name="BtnTiff" Content="TIFF" Margin="4" Width="80" Click="OnFormatClick" Tag="Tiff" />
            </WrapPanel>

            <TextBlock x:Name="TxtStatus" 
                       Text=""
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"
                       FontSize="13" />
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <ui:Button Content="More Options..." 
                       Appearance="Secondary"
                       Click="OnMoreOptionsClick"
                       Margin="0,0,8,0" />
            <ui:Button Content="Cancel" 
                       Click="OnCancelClick" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
